<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecteer Bestand"
        android:id="@+id/btnSelectFile"
        android:layout_marginRight="443dp"
        android:layout_marginEnd="443dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bestand: "
        android:id="@+id/txtBestand"
        android:layout_marginRight="111dp"
        android:layout_marginEnd="111dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSelectFile"
        android:layout_toStartOf="@+id/btnSelectFile"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Naam: "
        android:id="@+id/textView"
        android:layout_alignTop="@+id/editText"
        android:layout_alignLeft="@+id/txtBestand"
        android:layout_alignStart="@+id/txtBestand"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/btnSelectFile"
        android:layout_toRightOf="@+id/txtBestand"
        android:layout_alignRight="@+id/btnSelectFile"
        android:layout_alignEnd="@+id/btnSelectFile" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toevoegen"
        android:id="@+id/btnSave"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnSelectFile"
        android:layout_alignEnd="@+id/btnSelectFile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bestandsoort:"
        android:id="@+id/textView2"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/btnSelectFile"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView3"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2"
        android:layout_below="@+id/textView2"
        android:textSize="30dp" />

</RelativeLayout>
